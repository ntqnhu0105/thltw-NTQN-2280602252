@model NguyenThiQuynhNhu_Buoi4.Models.Product

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/Display.css" />
<script defer src="~/js/DisplayP.js"></script>

<div class="container mt-4">
    <div class="card shadow-lg p-4 animate-card">
        <div class="row">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                            <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded border product-image">
                }
                else
                {
                            <p class="text-muted">No image available</p>
                }
            </div>

            <div class="col-md-8">
                <h2 class="fw-bold text-primary">@Model.Name</h2>
                <h3 class="text-danger fw-semibold">💰 Price: @Model.Price.ToString("N3") đ</h3>
                <p class="mt-3 text-secondary">@Model.Description</p>

                <div class="mt-4">
                    <a id="backButton" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
